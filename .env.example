# AI Interview Coach Environment Variables
# Copy this file to .env.local and replace placeholder values with your actual API keys

# Supabase Configuration (for authentication and database)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=resumes

# Google OAuth Configuration (for Supabase auth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OpenAI Configuration (for AI question generation and analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# OpenRouter Configuration (alternative to OpenAI)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Speech to Text Service (Whisper API)
WHISPER_API_URL=https://api.openai.com/v1/audio/transcriptions

# Language Translation Service (choose one: google, azure, mock)
LANGUAGE_SERVICE_PROVIDER=google

# Google Translate API (for Indian regional + international languages)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Azure Translator Service (alternative to Google)
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=your_azure_region_here

# Application Settings
NEXT_PUBLIC_APP_NAME="AI Interview Coach"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_MAX_SESSION_DURATION=3600
NEXT_PUBLIC_MAX_QUESTIONS_PER_SESSION=10

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_AI=false
NEXT_PUBLIC_ENABLE_WEBCAM_ANALYSIS=true
NEXT_PUBLIC_ENABLE_SPEECH_RECOGNITION=true
NEXT_PUBLIC_ENABLE_PDF_EXPORT=true

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here

# File Upload Limits
MAX_AUDIO_FILE_SIZE=10485760
MAX_VIDEO_FILE_SIZE=52428800

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api
